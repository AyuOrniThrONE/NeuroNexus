<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3B6B6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="266dp"
        android:layout_height="145dp"
        android:layout_centerInParent="true"
        android:fontFamily=""
        android:text="To Do List App: List and Track your tasks"
        android:textAlignment="center"
        android:textColor="#063F6C"
        android:textFontWeight="1000"
        android:textSize="32dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:shadowColor="#0E2F42"
        android:text="Add Your Task"
        android:textColorLink="#1976D2"
        android:textSize="20dp"
        app:rippleColor="#8F4040" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scrollbars="none">

    </ScrollView>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</RelativeLayout>